<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.canvas.Canvas?>


<BorderPane fx:id="innerLayout" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller">
	<top>
		<MenuBar fx:id="menuBar">
	        <Menu text="File" onAction="#handleMenu">
		       	<MenuItem text="   Open file        "/>
		       	<MenuItem text="   Save file        "/>
		       	<MenuItem text="   Close file       "/>
		    </Menu>
	        <Menu text="Edit" onAction="#handleMenu">
	        </Menu>
	       	<Menu text="Options" onAction="#handleMenu">
		       	<MenuItem text="   Notation Options "/>
		       	<MenuItem text="   Properties       "/>
		       	<MenuItem text="   About            "/>
	       	</Menu>
	    </MenuBar>
	</top>
	<center>
		<ScrollPane fx:id="sPane">
			<AnchorPane>
				<Canvas fx:id="canvasbox" width="500" height="500"/>
				<Button layoutX="126" layoutY="150" text="Submit Turn" onAction="#handleButtonAction" />	
			</AnchorPane>
		</ScrollPane>
	</center>
	<right>
		<ListView fx:id="notationList" minWidth="200" maxWidth="300" prefWidth="200">
		</ListView>
	</right>
	<bottom>
		<VBox>
			<HBox>
				<Button layoutX="126" layoutY="150" text="Submit Turn" onAction="#handleButtonAction" />	
				<Button layoutX="126" layoutY="150" text="Undo Turn" onAction="#handleButtonAction" />
				<Button layoutX="126" layoutY="150" text="Undo Move" onAction="#handleButtonAction" />
			</HBox>
			<HBox>
				<TextField fx:id="movefield" />
				<Button text="Submit" onAction="#handleMove"/>
			</HBox>
			<HBox>
				<ListView maxHeight="50">
				</ListView>
				<ListView maxHeight="50">
				</ListView>
			</HBox>
			<Button layoutX="126" layoutY="150" text="Load" fx:id="Login" onAction="#handleButtonAction" />
		</VBox>
	</bottom>
</BorderPane>


