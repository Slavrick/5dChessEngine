<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.canvas.Canvas?>


<BorderPane fx:id="innerLayout" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller">
	<top>
		<MenuBar fx:id="menuBar">
	        <Menu text="File">
		       	<MenuItem text="   Open file        " fx:id="open" onAction="#loadGame"/>
		       	<MenuItem text="   Save file        "/>
		       	<MenuItem text="   Close file       "/>
		    </Menu>
	        <Menu text="Edit" onAction="#handleMenu">
	        </Menu>
	       	<Menu text="Options">
		       	<MenuItem text="   Notation Options "/>
		       	<MenuItem text="   Properties       "  onAction="#setProperties"/>
		       	<MenuItem text="   About            "/>
	       	</Menu>
	    </MenuBar>
	</top>
	<center>
		<ScrollPane>
				<Canvas fx:id="canvasbox" width="2000" height="2000"/>
		</ScrollPane>
	</center>
	<right>
		<ListView fx:id="notationList" minWidth="200" maxWidth="300" prefWidth="200">
		</ListView>
	</right>
	<bottom>
		<VBox>
			<HBox Alignment="CENTER_LEFT" spacing="50" >
				<Button text="Submit Turn" onAction="#handleSubmitButton" />	
				<Button text="Undo Turn" onAction="#handleUndoButton" />
				<Button text="Undo Move" />
			</HBox>
			<HBox>
				<ListView maxHeight="50">
				</ListView>
				<ListView maxHeight="50">
				</ListView>
			</HBox>
			<Label fx:id="statusLabel"/>
		</VBox>
	</bottom>
</BorderPane>


